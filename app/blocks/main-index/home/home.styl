.home 	
	base-markup(19rem,12rem)

	background-image url('../assets/images/iphone-6.png'),
					 url('../assets/images/background.jpg') 
					 
	background-position 62% bottom, center
	background-repeat no-repeat
	background-size auto, cover

	color color-white

	&__slogan
		margin-bottom 4.5rem

	&__platforms
		margin 5rem 0


	@media (max-width 320px)
		background-size 73%, cover
		background-position center 37%, center

		padding-bottom 3rem

		text-align center

		&:before
			content ''
			display block
			position absolute
			width 100%
			height 27rem
			bottom 0
			background-color color-darkblue

		&__slogan
			opacity 0
			margin-bottom 0
			padding-bottom 10rem 

		&__platforms
			margin 2.5rem 0 
