.information 	
	base-markup(0,6rem,color-lightgray)
	
	&__wrap
		display flex

	&__title
		color color-black
		font-size 3rem

	&__text
		padding-top 2rem
		padding-bottom 3rem

	&__timer
		width 88rem

	&__img
		max-width 100%

	@media (max-width 660px)
		background-color color-white
		padding 5.6rem 0

	@media (max-width 320px)
		display none