.contact 	
	base-markup(7rem)

	&__question
		max-width 48rem

		text-align center
		margin 0 auto

		font-size 5rem
		font-weight fw-light
		
		color color-darkblue

	&__wrap
		display flex

	&__item
		flex 1
		padding 4.3rem
		padding-bottom 2.5rem

		text-align center

	&__title
		font-size 1.8rem
		font-weight fw-bold

		color color-darkblue

		line-height 3

	&__info
		font-size 2.4rem
		font-weight fw-light

		color color-pink


	&__map
		position relative
		
		&:before
			content ''
			display block
			position absolute
			width 100%
			height 20rem
			top -0.1rem
			
			background-image url('../assets/images/triangle.svg')
			background-repeat no-repeat
			background-position center
			background-size cover

			z-index 999

	&__iframe
		height 50rem
		width 100%
		object-fit cover

		position relative


	@media (max-width 660px)
		&__question
			font-size 4rem

		&__item
			padding 3.5rem
			padding-bottom 0

			&:nth-child(2)
				order 2

		&__wrap
			flex-wrap wrap

	@media (max-width 320px)
		&__question
			font-size 2.4rem

		&__map
			&:before
				height 10rem