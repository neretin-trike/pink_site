.price-item
	flex 1
	align-self flex-end

	&__head
		padding 2rem 0
		background-color color-darkblue
		color color-white
		text-align center

		&_hit
			position relative
			border-left 0.2rem solid color-gray
			border-right 0.2rem solid color-gray

			&:before
				content ''

				display block
				position absolute
				top 0
				left 0
				width 7.5rem
				height @width

				background-image url(../assets/images/hit.png)
				background-repeat no-repeat
				background-position center

	&__title
		text-transform uppercase
		font-size 1.8rem
		line-height 2

	&__cost
		font-weight fw-light
		font-size 2.4rem

	&__options
		margin 0
		padding 0

		background-color color-white
		list-style-type none

		border-right 0.2rem solid color-gray
		border-top 0.2rem solid color-gray

		&:first-child
			border-left 0.2rem solid color-gray

	&__item
		padding 2.2rem
		border-bottom 0.2rem solid color-gray
		
	&__parameter
		display none

		&_desktop
			display block

	&__include
		text-indent -999.9rem

		display block
		margin 0 auto

		width 3rem
		height @width

		
		background-repeat no-repeat
		background-position center

		&_yes
			background-image url('../assets/images/yes.svg')

		&_no
			background-image url('../assets/images/no.svg')