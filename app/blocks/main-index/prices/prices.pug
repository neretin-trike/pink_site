mixin prices()
	section.prices
		.container
			h2.title-hidden Тарифы
			.prices__wrap
				.price-item
					ul.price-item__options
						li.text.price-item__item
							span.price-item__parameter.price-item__parameter_desktop Розовый фильтр
						li.text.price-item__item
							span.price-item__parameter.price-item__parameter_desktop Смайлики
						li.text.price-item__item
							span.price-item__parameter.price-item__parameter_desktop Комментарии
				+price-item('База', '1,99 USD', true, false, false)
				+price-item('Стандарт', '3,99 USD', true, true, false)
				+price-item('Анлим', '9,99 USD', true, true, true)