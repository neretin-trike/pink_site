.prices 	
	base-markup(14.5rem, 10rem)

	background linear-gradient(177deg, color-white 15%, color-lightgray 15%)

	&__wrap
		display flex

	&__slider
		display none

	@media (max-width 660px)
		padding 6rem 0 
		background linear-gradient(177deg, color-white 8%, color-lightgray 8%)

	@media (max-width 320px)
		overflow hidden	
		
		&__wrap 
			position relative
			left -90%
		
		&__slider
			display flex			
			padding 0
			margin-top 4rem
			list-style-type none