.feature-item 	
	display block

	text-align center

	padding 0 2.8rem
	padding-top 7rem

	&__fig
		position relative
		overflow hidden
		
		&:after
			content ''
			position absolute
			display block
			width 100%
			height 9rem
			background-color color-lightgray

			bottom -0.45rem

			box-shadow 0 1.1rem 3rem 0 #0c0c0c

	&__title
		color color-black

		font-size 3rem
		font-weight fw-bold
		line-height 3rem
