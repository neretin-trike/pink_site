.feature-item 	
	display block

	text-align center

	padding 0 2.8rem
	padding-top 7rem

	&__fig
		position relative
		overflow hidden
		
		&:after
			content ''
			position absolute
			display block
			width 100%
			height 9rem
			background-color color-lightgray

			bottom -0.45rem

			box-shadow 0 1.1rem 3rem 0 #0c0c0c

	&__title
		color color-black

		font-size 3rem
		font-weight fw-bold
		line-height 3rem

	&:first-child
		display none	

	@media (max-width 660px)
		
		&:first-child 
			display block
			
			position absolute
			top -10rem
			width 50%

			:after
				display none

		&:first-child &__img
			width 100%

		&:not(:first-child) 
			padding 0
			padding-left 52%
			text-align left
			margin-bottom 3rem 

		&:not(:first-child) &__title
			font-size 1.8rem	
			line-height 1

		&:not(:first-child) &__description
			font-size 1.4rem					

		&:not(:first-child) &__fig
			display none
