.reviews 	
	base-markup(7rem, 4.5rem)

	&__button
		color color-black

		overflow hidden
		text-indent -999.9rem
		
		width 3rem
		height 4.5rem

		background-image url('../assets/images/arrow_left.svg')
		background-repeat no-repeat

		&:hover
			opacity 0.3
		&:active
			opacity 0.1

		&_next
			transform scalex(-1)

	&__wrap
		display flex
		align-items center
		justify-content space-between

	&__slider
		display none

		padding 0
		margin-top 4rem
		list-style-type none

	@media (max-width 660px)
		padding-top 5rem
		padding-bottom 0

		&__wrap
			flex-direction column

		&__button
			display none

		&__slider
			display flex