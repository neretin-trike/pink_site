.day-photo 

	&__container
		top 5.5rem

	&__wrap
		position relative
		
	&__img
		width 100%
		min-height 50rem
		object-fit cover

	&__tag
		float right 
		background-color color-pink

		color color-white
		text-transform uppercase
		font-size 1.2rem
		font-weight fw-bold

		padding 1.3rem 1.9rem

	&__caption
		background-color color-lightgray
		padding 3rem

		color color-darkblue

	&__author
		font-size 1.4rem
		font-weight fw-bold

	&__time
		font-size 1.2rem
		font-weight fw-light
		text-transform uppercase

		padding-left 0.25rem

	&__like
		float right

		font-size 1.2rem
		color color-pink
		text-transform uppercase

		padding-right 6rem

		display block

		background-image url('../assets/images/like.svg')
		background-repeat no-repeat
		background-position 80% center
		
	&__text
		line-height 2

	@media (max-width 320px)

		&__tag
			font-size 1.2rem

		&__img
			min-height 14rem

		&__caption
			padding-bottom 5.5rem 

		&__like
			float none
			bottom 2.5rem
			padding-left 2.5rem
			background-position left center
			position absolute
