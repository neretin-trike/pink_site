.form-contact 	
	
	display inline-block

	&__input
		border 0.2rem solid color-gray
		width 31rem

		margin-left 5.5rem

		&:hover
			border-color color-darkblue
		&:focus
			border-color color-pink

	&__button
		text-indent -99.9rem
		margin-left -0.4rem

		vertical-align top
		width 7rem
		height @width

		background-color color-gray
		background-repeat no-repeat
		background-position center

		&_phone
			background-image url('../assets/images/phone.svg')

		&_email
			background-image url('../assets/images/email.svg')

	&__label
		display block
		color color-pink
		text-transform uppercase
		font-size 1.4rem

		margin-top 1.8rem
		margin-left 8rem

	@media (max-width 660px)
		width 100%
		padding-bottom 3rem

		&__input
			width 73%

	@media (max-width 320px)
		position relative

		&__input	
			margin-left 0
			width 100%
			margin-top 3.5rem
			
		&__label
			position absolute
			margin 0
			left 1.5rem
			top 0

		&__button
			display none