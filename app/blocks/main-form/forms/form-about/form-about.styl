.form-about 	
	display flex
	align-items center

	padding-bottom 5.5rem
	padding-right 3rem

	&:last-child
		padding-bottom 0

	&__label
		color color-pink
		text-transform uppercase
		
	&__input
		border 0.2rem solid color-gray

		&:hover
			border-color color-darkblue
		&:focus
			border-color color-pink


	@media (max-width 660px)
		padding-right 0		

	@media (max-width 320px)
		display block
		padding-bottom 3rem

		&__label
		&__input
			display block

		&__label
			margin-left 2rem
			margin-bottom 1rem

		&__input
			margin 0
